.row
  .col-md-10
    %h4 Professionals
  .col-md-2
    = link_to 'New Professional', new_professional_path, class: 'btn btn-success'

.row
  .col-md-6
    %h3 Listing
    %table.table-bordered.table-striped
      %thead
        %tr
          %th Firstname
          %th Lastname
          %th Address 1
          %th Zipcode
          %th City
          %th Country
          %th Actions
      %tbody
        - @professionals.each do |professional|
          %tr
            %td= professional.firstname
            %td= professional.lastname
            %td= professional.address_1
            %td= professional.zipcode
            %td= professional.city
            %td= professional.country
            %td
              = link_to 'Show', professional, class: 'btn btn-success btn-sm'
              = link_to 'Edit', edit_professional_path(professional), class: 'btn btn-warning btn-sm'
              = link_to 'Destroy', professional, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm'

    %br
  .col-md-6
    %h3 Localize professionals
    %div{style: 'width: 800px;'}
      #multi_markers{style: 'width: 800px; height: 400px;', data: { markers: raw(professionals_markers.to_json)}}
