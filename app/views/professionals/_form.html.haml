= form_for @professional, html: {class: 'form-horizontal', role: 'form'} do |f|
  - if @professional.errors.any?
    #error_explanation
      %h2
        = pluralize(@professional.errors.count, "error") 
        prohibited this professional from being saved:</h2>

      %ul
        - @professional.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :firstname, for: "firstname"
    = f.text_field :firstname, id: "firstname"
  .form-group
    = f.label :lastname, for: "lastname"
    = f.text_field :lastname, id: "lastname"
  .form-group
    = f.label :address_1, for: "address_1"
    = f.text_field :address_1, id: "address_1"
  .form-group
    = f.label :address_2, for: "address_2"
    = f.text_field :address_2, id: "address_2"
  .form-group
    = f.label :zipcode, for: "zipcode"
    = f.text_field :zipcode, id: "zipcode"
  .form-group
    = f.label :city, for: "city"
    = f.text_field :city, id: "city"
  .form-group
    = f.label :country, for: "country"
    = f.text_field :country, id: "country"
  .actions
    = f.submit t('submit'), class: 'btn btn-success'