<h1>Listing professionals</h1>

<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Adress 1</th>
      <th>Adress 2</th>
      <th>Zipcode</th>
      <th>City</th>
      <th>Country</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @professionals.each do |professional| %>
      <tr>
        <td><%= professional.firstname %></td>
        <td><%= professional.lastname %></td>
        <td><%= professional.adress_1 %></td>
        <td><%= professional.adress_2 %></td>
        <td><%= professional.zipcode %></td>
        <td><%= professional.city %></td>
        <td><%= professional.country %></td>
        <td><%= professional.latitude %></td>
        <td><%= professional.longitude %></td>
        <td><%= link_to 'Show', professional %></td>
        <td><%= link_to 'Edit', edit_professional_path(professional) %></td>
        <td><%= link_to 'Destroy', professional, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

